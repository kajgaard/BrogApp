<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:backgroundTint="@color/Highlight"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="10dp"
    card_view:cardUseCompatPadding="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/itemPicIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_square"
            android:backgroundTint="@color/AccentColorGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/brewNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:text="Manhatten"
            android:textColor="@color/TextColor"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/brewDescriptionTV"
            android:layout_width="190dp"
            android:layout_height="75dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="40dp"
            android:lineSpacingMultiplier="0.9"
            android:text="Super god kaffe som bare er mega god og lÃ¦kker og jeg vil have den hver dag"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starIV"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="325dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/star_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="70dp"
            android:text="4.3"
            android:textColor="@color/TextColor"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>